// ==========================================
// 1. TIPOS DE HABITACIÃ“N (ConfiguraciÃ³n)
// ==========================================
model TipoHabitacion {
  id_tipoHab      Int       @id @default(autoincrement())
  nombre          String    @db.VarChar(100)
  descripcion     String?   @db.Text
  capacidad       Int
  precioBase      Decimal   @db.Decimal(10,2)
  activo          Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  Habitaciones    Habitacion[]
  Comodidades     TipoHabitacionComodidad[]
  
  @@map("tipos_habitacion")
}

// ==========================================
// 2. COMODIDADES (Sin cambios)
// ==========================================
model Comodidad {
  id_comodidad    Int       @id @default(autoincrement())
  nombre          String    @db.VarChar(100)
  icono           String?   @db.VarChar(50)
  categoria       CategoriaComodidad @default(OTROS)
  descripcion     String?   @db.VarChar(250)
  activo          Boolean   @default(true)
  createdAt       DateTime  @default(now())
  
  TiposHabitacion TipoHabitacionComodidad[]
  
  @@map("comodidades")
}

enum CategoriaComodidad {
  BASICO
  ENTRETENIMIENTO
  BANIO
  SERVICIO
  OTROS
}

model TipoHabitacionComodidad {
  id_tipoHab      Int
  id_comodidad    Int
  
  TipoHabitacion  TipoHabitacion @relation(fields: [id_tipoHab], references: [id_tipoHab], onDelete: Cascade)
  Comodidad       Comodidad @relation(fields: [id_comodidad], references: [id_comodidad], onDelete: Cascade)
  
  @@id([id_tipoHab, id_comodidad])
  @@map("tipo_habitacion_comodidades")
}

// ==========================================
// 3. HABITACIONES (Sin cambios)
// ==========================================
model Habitacion {
  id_hab          Int       @id @default(autoincrement())
  numero          Int       @unique
  id_tipoHab      Int
  piso            Int?
  estado          EstadoHabitacion @default(DISPONIBLE)
  activo          Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  TipoHabitacion  TipoHabitacion @relation(fields: [id_tipoHab], references: [id_tipoHab])
  Reservas        Reserva[]  // ðŸ†• Ahora Reserva apunta aquÃ­
  
  @@index([id_tipoHab])
  @@index([estado])
  @@map("habitaciones")
}

enum EstadoHabitacion {
  DISPONIBLE
  OCUPADA
  LIMPIEZA
  MANTENIMIENTO
}

// ==========================================
// 4. HUÃ‰SPEDES (Sin cambios)
// ==========================================
model Huesped {
  id_huesped      Int       @id @default(autoincrement())
  nombre          String    @db.VarChar(100)
  apellido        String    @db.VarChar(100)
  documento       String?   @db.VarChar(50)
  telefono        String?   @db.VarChar(30)
  email           String?   @db.VarChar(120)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  Reservas        Reserva[]
  
  @@index([documento])
  @@index([email])
  @@map("huespedes")
}

// ==========================================
// 5. RESERVAS (SIMPLIFICADA) ðŸ”¥
// ==========================================
model Reserva {
  id_reserva      Int       @id @default(autoincrement())
  codigoReserva   String    @unique @db.VarChar(20)
  id_huesped      Int
  id_hab          Int       // ðŸ†• HabitaciÃ³n especÃ­fica (antes era tipo)
  
  fechaCheckIn    DateTime  @db.Date
  fechaCheckOut   DateTime  @db.Date
  cantAdultos     Int       @default(1)
  cantNinos       Int       @default(0)
  
  estado          EstadoReserva @default(PENDIENTE)
  total           Decimal   @db.Decimal(10,2)
  observaciones   String?   @db.Text
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Fechas reales (NULL hasta que ocurran)
  fechaCheckInReal    DateTime?  // ðŸ†• CuÃ¡ndo llegÃ³ realmente
  fechaCheckOutReal   DateTime?  // ðŸ†• CuÃ¡ndo se fue realmente
  
  Huesped         Huesped @relation(fields: [id_huesped], references: [id_huesped])
  Habitacion      Habitacion @relation(fields: [id_hab], references: [id_hab])  // ðŸ†•
  PagoReserva PagoReserva[] 
  
  @@index([id_huesped])
  @@index([id_hab])       // ðŸ†•
  @@index([fechaCheckIn])
  @@index([estado])
  @@map("reservas")
}

enum EstadoReserva {
  PENDIENTE
  CONFIRMADA
  CHECKED_IN
  CHECKED_OUT
  CANCELADA
}


// ==========================================
// 7. PAGOS (NUEVO)
// ==========================================
model PagoReserva {
  id_pago       Int         @id @default(autoincrement())
  id_reserva    Int         // A quÃ© reserva pertenece este pago
  id_fp         Int         // QuÃ© forma de pago se usÃ³
  
  monto         Decimal     @db.Decimal(10, 2) // CuÃ¡nto se pagÃ³
  fechaPago     DateTime    @default(now())   // CuÃ¡ndo se pagÃ³
  estado        EstadoPago  @default(COMPLETADO)
  referencia    String?     @db.VarChar(255)  // ID de transacciÃ³n (Stripe, MercadoPago, etc.)
  observaciones String?     @db.Text
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Relaciones
  Reserva       Reserva     @relation(fields: [id_reserva], references: [id_reserva], onDelete: Cascade)
  FormaPago     FormaPago   @relation(fields: [id_fp], references: [id_fp])
  
  @@index([id_reserva])
  @@index([id_fp])
  @@map("pagos")
}

enum EstadoPago {
  PENDIENTE
  COMPLETADO
  FALLIDO
  REEMBOLSADO
}